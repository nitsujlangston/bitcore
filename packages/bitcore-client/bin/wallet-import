#!/usr/bin/env node

const fs = require('fs');
const program = require('commander');
const Wallet = require('../lib/wallet');

program
  .version(require('../package.json').version)
  .option('--path <path>', 'REQUIRED - Where wallet is stored')
  .option('--load [load]', 'OPTIONAL - A jsonl file with {"address": "mXy1234"} in it')
  .parse(process.argv);

const main = async () => {
  const {path, load} = program;
  let wallet;
  try {
    wallet = await Wallet.loadWallet({ path });
    let keyInput = [];
    if(load) {
      let contents = fs.readFileSync(load).toString();
      let fileKeys = contents.split('\n')
        .filter((line) => line !== '')
        .map((line) => JSON.parse(line));
      keyInput = fileKeys;
    }
    await wallet.importKeys({ keys: keyInput });
  } catch (e) {
    console.error(e);
  }
}

main();
